@model IEnumerable<MagicVilla_Web.Models.Dtos.VillaDTO>
<br />
<div class="conteiner p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary">Create New Villa</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Occupancy</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Occupancy</td>
                <td>@(item.Rate.ToString("c"))</td>
                <td>
                    <a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaId="@item.Id" class="btn btn-outline-success">Update</a>
                    <a asp-controller="Villa" asp-action="DeleteVilla" asp-route-villaId="@item.Id" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
        <tbody>

        </tbody>
    </table>
</div>